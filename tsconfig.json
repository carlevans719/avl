{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,

    "baseUrl": "./packages",
    "paths": {
      "avl-parser-bitrek": ["packages/avl-parser-bitrek"],
      "avl-parser-utils": ["packages/avl-parser-utils"],
      "avl-monitor": ["packages/avl-monitor"]
    }
  },

  "exclude": ["node_modules", "dist"]
}
